<html>
<head>
	<title>League Bans</title>

	<meta charset="utf-8">
	<meta http-equiv="X-UA-Compatible" content="IE=edge">
	<meta name="viewport" content="width=device-width, initial-scale=1">

	<!-- Bootstrap CSS -->
    <link href="/bootstrap/dist/css/bootstrap.css" rel="stylesheet">

	<!-- Custom CSS -->
	<link rel="stylesheet" href="css/index.css">
</head>
<body>
<div class="container">
	<table class="table table-striped table-bordered">
		<thead>
			<td>Champion</td>
			<td>Popularity</td>
			<td>Win Rate</td>
			<td>Ban Rate</td>
			<td>Ban Score</td>
		</thead>
		{{#each data}}
			<tr>
				<td>{{this.champion}}</td>
				<td class="right">{{formatDecimal this.popularity}}%</td>
				<td class="right">{{formatDecimal this.winRate}}%</td>
				<td class="right">{{formatDecimal this.banRate}}%</td>
				<td class="right">{{formatDecimal this.banScore}}</td>
			</tr>
		{{/each}}
	</table>
</div>

<!-- jQuery (necessary for Bootstrap's JavaScript plugins) -->
<script src="/jquery/dist/jquery.min.js"></script>

<!-- Bootstrap Javascript -->
<script src="/bootstrap/dist/js/bootstrap.min.js"></script>
</body>
</html>
